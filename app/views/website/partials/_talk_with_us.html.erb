<div class='row talk-with-us'>
  <div class='col-12'>
    <hr class='ml-0 attention-helper'>
    <h4 class='title'>We Are A Highly Trusted Tijuana Dentist Clinic</h4>
    <h5 class='suggester'>
      Over 100+ Americans Trust Us
    </h5>
    <%= form_tag(controller: :operations, action: :schedule, method: :post) do %>
      <div class='form-group'>
        <input name='person_name' type='text' class='form-control name' placeholder='Your Name' required=''>
      </div>
      <div class='form-group'>
        <input name='email_address' type='email' class='form-control email' placeholder='Your Email' required=''>
      </div>
      <div class='form-group'>
        <input name='phone_number' type='phone' class='form-control phone' placeholder='(619) 000-0000' required=''>
      </div>
      <div class='form-group'>
        <input name='lead_desired_date' type='Date' class='form-control date' placeholder='Date' required=''>
      </div>
      <div class='form-group'>
        <button class='btn btn-primary btn-lg btn-block orange-btn' type='submit'>Book Now</button>
      </div>
    <% end %>
  </div>
</div>
