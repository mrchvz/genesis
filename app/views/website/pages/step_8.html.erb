<%= render 'website/partials/secondary_header_genesis' %>
<div class='container-fluid'>
  <div class='row'>
    <div class='col-3 sidabar'>
      <%= render 'website/partials/wizard_explainer' %>
    </div>

    <div class='col-6 content'>
      <h5 class='field'>
        Do you want to open an SVB business bank account?
      </h5>
      <a href='/'>
        SVB restrictions apply
      </a>
      <form>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
          <label class="form-check-label" for="exampleRadios1">
            Yes
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
          <label class="form-check-label" for="exampleRadios2">
            No
          </label>
        </div>
        <h5 class='field'>
          Personal Address
        </h5>
        <div class="form-group">
          <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="inputAddress2" placeholder="Apartment, studio, or floor">
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" id="inputCity">
          </div>
          <div class="form-group col-md-4">
            <label for="inputState">
              State
            </label>
            <select id="inputState" class="form-control">
              <option selected>
                United States
              </option>
              <option>
                ...
              </option>
            </select>
          </div>
          <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <input type="text" class="form-control" id="inputZip">
          </div>
        </div>
        <h5 class='field'>
          Which products do you want to enable?
        </h5>
        <p class='explainer'>
          Enable these products now with just one click, or in the future by contacting SVB directly.
        </p>
        <a href='/'>
          SVB restrictions apply
        </a>
        <p class='option'>
          Debit Card
        </p>
        <div class="form-check">

          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
          <label class="form-check-label" for="exampleRadios1">
            Yes
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
          <label class="form-check-label" for="exampleRadios2">
            No
          </label>
        </div>
        <p class='option'>
          Wire Transfers
        </p>
        <div class="form-check">

          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
          <label class="form-check-label" for="exampleRadios1">
            Yes
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
          <label class="form-check-label" for="exampleRadios2">
            No
          </label>
        </div>
        <p class='option'>
          Autorized Signers
        </p>
        <div class="form-check">
          <input type="checkbox" class="form-check-input" id="exampleCheck1">
          <label class="form-check-label" for="exampleCheck1">John Doe</label>
        </div>
        <button type="submit" class="btn btn-primary">
          Back
        </button>
        <button type="submit" class="btn btn-primary">
          Next
        </button>
      </form>
    </div>

    <div class='col-3 preview'>
      <%= render 'website/partials/wizard_preview' %>
    </div>
  </div>
</div>
<%= render 'website/partials/secondary_footer_genesis' %>
