<%= render 'website/partials/header_genesis' %>
<div class='container'>
  <div class='row'>
    <div class='col-12'>
      <h1 class='title text-center'>
        Sign up to Genesis
      </h1>
    </div>
  </div>
  <form class='form' action="/submit_contact_form" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <div class="form-group">
        <input name='name' type="name" class="form-control" placeholder="Full Name" id="inputName" required>
      </div>
      <div class="form-group">
        <input name='email' type="email" class="form-control" placeholder="Email" id="inputEmail" required>
      </div>
      <div class="form-group">
        <input name='password' type="password" class="form-control" placeholder="Password" id="inputPassword" required>
      </div>
      <div class="form-group">
        <input name='password' type="password" class="form-control" placeholder="Confirm Password" id="inputPassword" required>
      </div>
      <button type="submit" class="btn btn-primary btn-block">Sign Up</button>
    </form>
    <div class='row text'>
      <div class='col-12'>
        <p class='text text-center'>
          Not a member yet?
        <a href='/sign-up text-center link'>
          Sign Up
        </a>
        <a href='/password_recover link'>
          Forgot Password?
        </a>
      </p>
    </div>
  </div>
</div>
<%= render 'website/partials/footer_genesis' %>
