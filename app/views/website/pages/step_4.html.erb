<%= render 'website/partials/secondary_header_genesis' %>
<div class='container-fluid'>
  <div class='row'>
    <div class='col-3 sidabar' style='background-color:#032840;'>
      <%= render 'website/partials/wizard_explainer' %>
    </div>

    <div class='col-6 wizard-content'>
      <form>
        <h3 class='title-product'>
          Your New U.S. Company
        </h3>
        <h5 class='field'>
          Company Name
        </h5>
        <div class="form-group">
          <input type="text" class="form-control" id="inputText" placeholder="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.">
        </div>
        <h5 class='field'>
          Funding
        </h5>
        <div class="form-group">
          <select class="form-control" id="exampleFormControlSelect1">
            <option>
              Venture Capital Investor
            </option>
            <option>
              Option
            </option>
          </select>
        </div>
        <h5 class='field'>
          Business Address
        </h5>
        <div class="form-group">
          <label for="inputAddress">Address</label>
          <input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St">
        </div>
        <div class="form-group">
        </div>
        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="inputCity">City</label>
            <input type="text" class="form-control" id="inputCity">
          </div>
          <div class="form-group col-md-4">
            <label for="inputState">
              State
            </label>
            <select id="inputState" class="form-control">
              <option selected>
                Choose...
              </option>
              <option>
                ...
              </option>
            </select>
          </div>
          <div class="form-group col-md-2">
            <label for="inputZip">Zip</label>
            <input type="text" class="form-control" id="inputZip">
          </div>
        </div>
        <h5 class='field'>
          Number of Shares
        </h5>
        <div class="form-group">
          <input type="number" class="form-control" id="inputNumber" placeholder="10 000 000">
        </div>
        <h5 class='field'>
          Phone Number
        </h5>
        <div class="form-group">
          <input name='telephone' type="tel" class="form-control" placeholder="+1 (619) 165 1588" required>
        </div>
        <a class="btn btn-primary btn-block-steps float-right" href="/step_5" role="button">Next</a>
        <a class="btn btn-primary btn-block-steps float-right" href="/step_3" role="button">Back</a>
      </form>
    </div>

    <div class='col-3 preview' style='background-color:#F0F0F0;'>
      <%= render 'website/partials/wizard_preview' %>
    </div>
  </div>
</div>
<%= render 'website/partials/secondary_footer_genesis' %>
